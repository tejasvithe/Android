<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backp"
    tools:context="com.example.tejasvikumar.shapematch.ShapeActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="20sp"
        android:id="@+id/timertext"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/notmatch"
        android:layout_alignEnd="@+id/notmatch" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:text="Timer"
        android:textSize="20sp"
        android:layout_below="@+id/timertext"
        android:layout_alignRight="@+id/timertext"
        android:layout_alignEnd="@+id/timertext" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/scoretext"
        android:text="Score"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="0"
        android:layout_below="@+id/scoretext"
        android:id="@+id/score"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timer"
        android:id="@+id/shape"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/match"
        android:text="match"
        android:background="#800000"
        android:textColor="#ffffff"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/shape"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notmatch"
        android:text="Not match"
        android:background="#800000"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/match"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
